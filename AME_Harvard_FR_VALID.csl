<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>AME - Harvard Francisé</title>
    <id>http://www.zotero.org/styles/ame-harvard-fr</id>
    <link href="http://www.zotero.org/styles/ame-harvard-fr" rel="self"/>
    <author>
      <name>Belmeskine Jaouad (adapté par ChatGPT)</name>
    </author>
    <category citation-format="author-date"/>
    <updated>2025-07-15</updated>
    <language>fr-FR</language>
  </info>
  <macro name="author">
    <names variable="author">
      <name and="text" initialize-with="." delimiter=", "/>
      <label form="short" prefix=", " text-case="lowercase"/>
    </names>
  </macro>
  <citation>
    <layout prefix="(" suffix=")" delimiter="; ">
      <text macro="author"/>
      <date variable="issued">
        <date-part name="year"/>
      </date>
    </layout>
  </citation>
  <bibliography>
    <layout hanging-indent="true" delimiter=". ">
      <text macro="author"/>
      <date variable="issued">
        <date-part name="year" prefix=" (" suffix=")"/>
      </date>
      <text variable="title" prefix=". "/>
      <group prefix=". " delimiter=", ">
        <text variable="container-title"/>
        <text variable="volume"/>
        <text variable="page"/>
      </group>
    </layout>
  </bibliography>
</style>
